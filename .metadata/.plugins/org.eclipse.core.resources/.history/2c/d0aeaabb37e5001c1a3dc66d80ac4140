    # Construct a table of ghost characteristics to access
    # using the bank member as the index.
    ghost_specs = [
        {
            "name": "Pinky",
            "directions": pacman.Pinky_directions,
            "width": pacman.w,
            "height": pacman.m_h,
            "image": "images/Pinky.png"
        },
