reactor Display(num_moving_sprites(0), num_static_sprites(0), nav_icon("images/pacman.png")) {
    input[num_moving_sprites] moving_sprites
    input[num_static_sprites] static_sprites
    input game_over
    input score
    input[5] icon_name
    input playerpause
    input restart
