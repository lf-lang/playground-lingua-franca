    #logical action announcementval
    #input controllerpause

    output tick
    output[5] icon
    
    state _game_over(False)
    state _screen
    state _font
    state _clock
    state _static_sprites({=pacman.pygame.sprite.RenderPlain()=})
    state _top_corner_text
    state _active(True)
    state _announcement(True)

